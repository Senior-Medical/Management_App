<div class="modal fade" id="delete-product-modal-<%= index %>" tabindex="-1" aria-labelledby="delete-product-modal-label-<%= index %>" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="delete-product-modal-label-<%= index %>">حذف منتج</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body fs-5">هل انت متأكد من حذف <strong><%= product.name %></strong>؟</div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إغلاق</button>
        <a href="/products/delete/<%= product._id %>" class="btn btn-danger">حذف</a>
      </div>
    </div>
  </div>
</div>