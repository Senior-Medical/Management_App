<div class="accordion mb-4" id="filters">
  <div class="accordion-item">
    <h2 class="accordion-header">
      <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#filters-form" aria-expanded="true" aria-controls="filters-form">
        <strong>الفلاتر</strong>
      </button>
    </h2>
    <div id="filters-form" class="accordion-collapse collapse show" data-bs-parent="#filters">
      <div class="accordion-body">
        <form action="/<%= type %>" id="filter-form" method="get" class="row py-4">
          <div class="container overflow-hidden text-center">
            <div class="row">
        
              <div class="col-lg-3 col-md-6 col-12">
                <div class="input-group mb-3">
                  <label class="input-group-text" for="page-size">عدد الصفوف</label>
                  <input id="page-size" name="pageSize" type="number" class="form-control" form="filter-form" aria-label="page-size" aria-describedby="page-size" value="<%=(pagination.pageSize) ? pagination.pageSize : 10 %>">
                </div>
              </div>
  
              <div class="col-lg-3 col-md-7 col-12">
                <div class="input-group mb-3">
                  <label for="sort" class="input-group-text">ترتيب</label>
                  <select class="form-select" id="sort" name="sort" form="filter-form">
                    <option value="createdAt" <%=(sort.replace('-', '' )==="createdAt" ) ? 'selected' : '' %>>تاريخ الإنشاء</option>
                    <option value="updatedAt" <%=(sort.replace('-', '' )==="updatedAt" ) ? 'selected' : '' %>>تاريخ آخر تحديث</option>
                    <% if(type==='users' ) { %>
                      <option value="username" <%=(sort.replace('-', '' )==="username" ) ? 'selected' : '' %>>إسم المستخدم
                      </option>
                      <option value="role" <%=(sort.replace('-', '' )==="role" ) ? 'selected' : '' %>>الدور الوظيفي
                      </option>
                    <% } else if (type === 'production') { %>
                      <option value="quantity" <%=(sort.replace('-', '' )==="quantity" ) ? 'selected' : '' %>>كمية الإنتاج
                      </option>
                      <option value="date" <%=(sort.replace('-', '' )==="date" ) ? 'selected' : '' %>>تاريخ الإنتاج
                      </option>
                      <option value="cost" <%=(sort.replace('-', '' )==="cost" ) ? 'selected' : '' %>>سعر الإنتاج
                      </option>
                    <% } else if (type === 'productPrice') { %>
                      <option value="price" <%=(sort.replace('-', '' )==="price" ) ? 'selected' : '' %>>سعر المنتج
                      </option>
                    <% } else if (type==='bonus' ) { %>
                      <option value="from" <%=(sort.replace('-', '' )==="from" ) ? 'selected' : '' %>>من</option>
                      <option value="to" <%=(sort.replace('-', '' )==="to" ) ? 'selected' : '' %>>إلى</option>
                      <option value="percentage" <%=(sort.replace('-', '' )==='percentage' ) ? 'selected' : '' %>>النسبة
                      </option>
                    <% } else { %>
                      <option value="name" <%=(sort.replace('-', '' )==="name" ) ? 'selected' : '' %>>الإسم</option>
                    <% } %>
                  </select>
                </div>
              </div>
  
              <div class="col-lg-3 col-md-5 col-11">
                <div class="input-group mb-3">
                  <label class="input-group-text" for="sort-type">ترتيب تنازلي</label>
                  <div class="input-group-text">
                    <div class="form-check form-switch">
                      <input class="form-check-input" type="checkbox" role="switch" name="sort-type" id="sort-type" form="filter-form" <%=(sort.startsWith("-"))?"checked":""%>>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>