<form action="users" id="filter-form" method="get" class="row m-5">
  <div class="container overflow-hidden text-center">
    <div class="row">
      <div class="col-lg-3 col-md-6 col-12">
        <div class="input-group mb-3">
          <label class="input-group-text" for="search">بحث</label>
          <input id="search" name="search" type="text" class="form-control" aria-label="search" aria-describedby="search" placeholder="إبحث بإسم المستخدم" value="<%=filters.search%>">
        </div>
      </div>
    
      <div class="col-lg-3 col-md-6 col-12">
        <div class="input-group mb-3">
          <label for="sort" class="input-group-text">ترتيب</label>
          <select class="form-select" id="sort" name="sort">
            <option value="createdAt" <%=(filters.sort.replace('-', '') === "createdAt") ? 'selected' : '' %>>تاريخ الإنشاء</option>
            <option value="username" <%=(filters.sort.replace('-', '') === "username") ? 'selected' : '' %>>إسم المستخدم</option>
            <option value="updatedAt" <%=(filters.sort.replace('-', '') === "updatedAt") ? 'selected' : '' %>>تاريخ آخر تحديث</option>
            <option value="role" <%=(filters.sort.replace('-', '') === "role") ? 'selected' : '' %>>الدور الوظيفي</option>
          </select>
        </div>
      </div>

      <div class="col-lg-3 col-md-6 col-12">
        <div class="input-group mb-3">
          <label class="input-group-text" for="sort-type">ترتيب تنازلي</label>
          <div class="input-group-text">
            <div class="form-check form-switch">
              <input class="form-check-input" type="checkbox" role="switch" id="sort-type">
            </div>
          </div>
        </div>
      </div>
    
      <!-- <div class="input-group mb-3">
        <label for="custom-filter-key" class="input-group-text">ترتيب</label>
        <select class="form-select" id="custom-filter-key" name="filter-key">
          <option disabled selected></option>
        </select>
        <label class="input-group-text" for="custom-filter-value">إختر للترتيب التنازلي</label>
        <input id="custom-filter-value" class="form-control mt-0" name="filter-value" type="text" aria-label="Checkbox for following text input">
      </div> -->
    
      <div class="col-lg-3 col-md-6 col-12">
        <div class="input-group mb-3">
          <label class="input-group-text" for="page-size">عدد الصفوف</label>
          <input id="page-size" name="pageSize" type="number"  class="form-control" aria-label="page-size" aria-describedby="page-size" value="<%=(filters.pagination.pageSize) ? filters.pagination.pageSize : 10 %>">
        </div>
      </div>
    
      <!-- <div class="input-group mb-3">
        <button class="btn btn-dark">إضافة فلتر</button>
      </div> -->
    </div>
    <div class="row">
      <div class="input-group mb-3">
        <button type="submit" class="btn btn-dark w-4">تطبيق</button>
      </div>
    </div>
  </div>

</form>