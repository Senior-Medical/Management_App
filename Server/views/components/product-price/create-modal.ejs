<div class="modal fade" id="create-product-price-modal" tabindex="-1" aria-labelledby="create-product-price-modal-label" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="create-product-price-modal-label">تحديد سعر المنتج</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/productPrice" method="post" id="create-product-price-form">
          <div class="mb-3">
            <label for="product" class="col-form-label fs-4">المنتج:</label>
            <select class="form-select" id="product" name="product">
              <option value="" selected>اختر المنتج</option>
              <% products.forEach(product => { %>
                <option value="<%= product._id %>"><%= product.name %></option>
              <% }) %>
            </select>
            <div class="text-danger mt-1" id="product-error" style="display: none;"></div>
          </div>
          <div class="mb-3">
            <label for="department" class="col-form-label fs-4">القسم:</label>
            <select class="form-select" id="department" name="department">
              <option value="" selected>اختر القسم</option>
              <% departments.forEach(department => { %>
                <option value="<%= department._id %>"><%= department.name %></option>
              <% }) %>
            </select>
            <div class="text-danger mt-1" id="department-error" style="display: none;"></div>
          </div>
          <div class="mb-3">
            <label for="price" class="col-form-label fs-4">السعر:</label>
            <input type="number" class="form-control" id="price" name="price">
            <div class="text-danger mt-1" id="price-error" style="display: none;"></div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">إغلاق</button>
        <button type="button" class="btn btn-success" id="create-product-price">إضافة</button>
      </div>
    </div>
  </div>
</div>