<!DOCTYPE html>
<html lang="ar" dir="rtl">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/bootstrap.rtl.min.css">
    <link rel="stylesheet" href="/styles/all.css" />
    <link rel="stylesheet" href="/styles/header.css" />
    <link rel="stylesheet" href="/styles/dashboard.css" />
    <title> <%= title %> </title>
  </head>

  <body>
    <%- include('components/header', {type, user}) %>

    <div class="container-xl">
      <%- include('components/users/filter-form', filters) %>

      <%- include('components/users/create-modal') %>

      <% if(error) { %>
        <div class="alert alert-danger" role="alert">
          <%= error %>
        </div>
      <% } %>

      <% if(data.length !== 0) { %>
        <%- include('components/users/table') %>

        <% if(filters.pagination.totalPages > 1) { %>
          <%- include('components/pagination', filters.pagination) %>
        <% } %>
      <% } else { %>
        <div class="alert alert-warning" role="alert">لا يوجد مستخدمين</div>
      <% } %>
    </div>

    <script src="/scripts/bootstrap.bundle.min.js"></script>
    <script src="/scripts/users.js"></script>
  </body>
</html>